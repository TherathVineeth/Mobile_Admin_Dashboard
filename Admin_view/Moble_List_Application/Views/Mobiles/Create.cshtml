@model Mobile_List

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h3 class="text-black align-content-center">Add New Mobiles</h3>
        </div>
      </div>
      <div class="row"> 
          <div class="col-md-12">
              <form method="post" enctype="multipart/form-data">
                  <div class="mb-3">
                    <label asp-for="@Model.Mobile_name" class="form-label"></label>
                    <input asp-for="@Model.Mobile_name" class="form-control"/>
                    <span asp-validation-for="@Model.Mobile_name" class="text-danger"> </span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Mobile_Brand" class="form-label"></label>
                    <input asp-for="@Model.Mobile_Brand" class="form-control" />
                    <span asp-validation-for="@Model.Mobile_Brand" class="text-danger"> </span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Mobile_description" class="form-label"></label>
                    <input asp-for="@Model.Mobile_description" class="form-control" />
                    <span asp-validation-for="@Model.Mobile_description" class="text-danger"> </span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Mobile_logo" class="form-label"></label>
                    <input type="file" asp-for="@Model.Mobile_logo" class="form-control" />
                </div>
                <div class="mb-3">
                    <a asp-controller="Mobiles" asp-action="Index" class="btn btn-danger">Back</a>
                    <button type="submit" class="btn btn-success">Create</button>

                </div>
              </form>
          </div>
      </div>

</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}