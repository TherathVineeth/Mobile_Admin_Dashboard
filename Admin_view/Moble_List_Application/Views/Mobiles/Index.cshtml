@{
    ViewData["Title"] = "Home Page";
}
<style>
   .card-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: Center;
    background-color:#FAEBD7;
}

.card {
   
   max-width: calc(33.33% - 20px);
  
     margin-bottom: 30px; 
     background-color: black; 
    color: white; 
     backdrop-filter: blur(4px);
}

</style>

@model List<Mobile_List>

<div class="container">
    <div class="row mb-4">
        <div class="col-md-6 text-black text-uppercase"> <h3>Mobile List</h3></div>
        <div  class="col-md-6 text-end">

            <a asp-controller="Mobiles" asp-action="Create" class="btn btn-primary">Create</a>
        </div>
     </div>
     <hr />

    @if(Model.Count > 0)
    {

     <div class="card-container" >
    @foreach (var item in Model)
    {
        <div class="card" style="width: calc(33.33% - 20px); margin-right: 20px;">
            <img class="card-img-top" src="@item.Mobile_logo" alt="Mobile images" />
            <div class="card-body">
                <h5 class="card-title">@item.Mobile_name</h5>
                <p class="card-text">@item.Mobile_description</p>
                <p class="card-text">@item.Mobile_Brand</p>
                <a asp-controller="Mobiles" asp-action="Edit" asp-route-id="@item.id" class="btn btn-warning">Edit</a>
                <a asp-controller="Mobiles" asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger">Delete</a>
            </div>
        </div>
    }
</div>

